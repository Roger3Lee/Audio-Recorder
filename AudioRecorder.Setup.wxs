<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <Package Name="AudioRecorder" Version="1.0.0" Manufacturer="AudioRecorder Team" Language="1033" UpgradeCode="12345678-1234-1234-1234-123456789012" Compressed="yes">
    
    <!-- 升级配置 - 防止重复安装 -->
    <MajorUpgrade DowngradeErrorMessage="已安装更新版本的 AudioRecorder。请先卸载现有版本。" />
    
    <!-- 媒体配置 -->
    <MediaTemplate EmbedCab="yes" />
    
    <!-- 产品信息 -->
    <Property Id="ARPPRODUCTICON" Value="AppIcon" />
    <Property Id="ARPHELPLINK" Value="https://github.com/your-repo/audiorecorder" />
    <Property Id="ARPURLINFOABOUT" Value="https://github.com/your-repo/audiorecorder" />
    <Property Id="ARPNOMODIFY" Value="1" />
    <Property Id="ARPNOREPAIR" Value="1" />
    <Property Id="ARPCONTACT" Value="AudioRecorder Team" />
    <Property Id="ARPCOMMENTS" Value="桌面录音控制器 - 支持URL协议和WebSocket控制" />
    
    <!-- 简单的静默安装 -->
    
    <!-- 功能组件 -->
    <Feature Id="ProductFeature" Title="AudioRecorder" Level="1" Description="AudioRecorder 主程序">
      <ComponentGroupRef Id="ProductComponents" />
      <ComponentGroupRef Id="ShortcutComponents" />
      <ComponentGroupRef Id="ProtocolComponents" />
    </Feature>
    
    <!-- 安装目录结构 -->
    <StandardDirectory Id="ProgramFiles6432Folder">
      <Directory Id="INSTALLFOLDER" Name="AudioRecorder">
        <!-- 创建Audio子文件夹用于存储录音文件 -->
        <Directory Id="AudioFolder" Name="Audio" />
        <!-- 创建log子文件夹用于存储日志文件 -->
        <Directory Id="LogFolder" Name="log" />
      </Directory>
    </StandardDirectory>
    
    <!-- 开始菜单目录 -->
    <StandardDirectory Id="ProgramMenuFolder">
      <Directory Id="ApplicationProgramsFolder" Name="AudioRecorder" />
    </StandardDirectory>
    
    <!-- 桌面目录 -->
    <StandardDirectory Id="DesktopFolder" />
    
    <!-- 主程序组件 -->
    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <Component Id="MainExecutable" Guid="*">
        <File Id="MainExecutable" Name="AudioRecorder.exe" 
              Source="binReleasenet8.0-windowswin-x64publish\AudioRecorder.exe" />
        
        <!-- 配置文件 -->
        <File Id="AppSettings" Name="appsettings.json" 
              Source="appsettings.json" />
        
        <!-- 注册表信息 - 用于检测已安装版本 -->
        <RegistryKey Root="HKCU" Key="Software\Microsoft\Windows\CurrentVersion\Uninstall\AudioRecorder">
          <RegistryValue Name="DisplayName" Value="AudioRecorder" Type="string" />
          <RegistryValue Name="DisplayVersion" Value="1.0.0" Type="string" />
          <RegistryValue Name="Publisher" Value="AudioRecorder Team" Type="string" />
          <RegistryValue Name="InstallLocation" Value="[INSTALLFOLDER]" Type="string" />
          <RegistryValue Name="UninstallString" Value="msiexec /x [ProductCode]" Type="string" />
          <RegistryValue Name="DisplayIcon" Value="[INSTALLFOLDER]AudioRecorder.exe" Type="string" />
          <RegistryValue Name="NoModify" Value="1" Type="integer" />
          <RegistryValue Name="NoRepair" Value="1" Type="integer" />
        </RegistryKey>
        
        <!-- 应用程序配置注册表 -->
        <RegistryKey Root="HKCU" Key="Software\AudioRecorder">
          <RegistryValue Name="InstallDir" Value="[INSTALLFOLDER]" Type="string" />
          <RegistryValue Name="Version" Value="1.0.0" Type="string" />
        </RegistryKey>
      </Component>
      
      <!-- Audio文件夹组件 -->
      <Component Id="AudioFolderComponent" Directory="AudioFolder" Guid="*">
        <CreateFolder />
        <RegistryValue Root="HKCU" Key="Software\AudioRecorder\Folders" 
                       Name="AudioFolder" Value="[AudioFolder]" Type="string" KeyPath="yes" />
      </Component>
      
      <!-- Log文件夹组件 -->
      <Component Id="LogFolderComponent" Directory="LogFolder" Guid="*">
        <CreateFolder />
        <RegistryValue Root="HKCU" Key="Software\AudioRecorder\Folders" 
                       Name="LogFolder" Value="[LogFolder]" Type="string" KeyPath="yes" />
      </Component>
    </ComponentGroup>
    
    <!-- 快捷方式组件 -->
    <ComponentGroup Id="ShortcutComponents">
      <!-- 开始菜单快捷方式 -->
      <Component Id="ApplicationShortcut" Directory="ApplicationProgramsFolder" Guid="*">
        <Shortcut Id="ApplicationStartMenuShortcut"
                  Name="AudioRecorder"
                  Target="[#MainExecutable]"
                  WorkingDirectory="INSTALLFOLDER" />
        
        <!-- 卸载快捷方式 -->
        <Shortcut Id="UninstallShortcut"
                  Name="卸载 AudioRecorder"
                  Target="[SystemFolder]msiexec.exe"
                  Arguments="/x [ProductCode]" />
        
        <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall" />
        
        <RegistryValue Root="HKCU" Key="Software\AudioRecorder\Shortcuts" 
                       Name="installed" Type="integer" Value="1" KeyPath="yes" />
      </Component>
      
      <!-- 桌面快捷方式 -->
      <Component Id="DesktopShortcut" Directory="DesktopFolder" Guid="*">
        <Shortcut Id="ApplicationDesktopShortcut"
                  Name="AudioRecorder"
                  Target="[#MainExecutable]"
                  WorkingDirectory="INSTALLFOLDER" />
        
        <RegistryValue Root="HKCU" Key="Software\AudioRecorder\Shortcuts" 
                       Name="desktop" Type="integer" Value="1" KeyPath="yes" />
      </Component>
    </ComponentGroup>
    
    <!-- URL协议注册组件 -->
    <ComponentGroup Id="ProtocolComponents" Directory="INSTALLFOLDER">
      <Component Id="UrlProtocolRegistry" Guid="*">
        <!-- 注册 audiorecorder:// 协议 -->
        <RegistryKey Root="HKCU" Key="Software\Classes\audiorecorder">
          <RegistryValue Value="AudioRecorder Protocol" Type="string" />
          <RegistryValue Name="URL Protocol" Value="" Type="string" />
        </RegistryKey>
        
        <RegistryKey Root="HKCU" Key="Software\Classes\audiorecorder\DefaultIcon">
          <RegistryValue Value="[#MainExecutable],0" Type="string" />
        </RegistryKey>
        
        <RegistryKey Root="HKCU" Key="Software\Classes\audiorecorder\shell">
          <RegistryValue Value="open" Type="string" />
        </RegistryKey>
        
        <RegistryKey Root="HKCU" Key="Software\Classes\audiorecorder\shell\open">
          <RegistryValue Value="打开 AudioRecorder" Type="string" />
        </RegistryKey>
        
        <RegistryKey Root="HKCU" Key="Software\Classes\audiorecorder\shell\open\command">
          <RegistryValue Value='"[#MainExecutable]" "%1"' Type="string" />
        </RegistryKey>
        
        <!-- 文件关联（可选：支持 .audiorecord 文件） -->
        <RegistryKey Root="HKCU" Key="Software\Classes\.audiorecord">
          <RegistryValue Value="AudioRecorder.Document" Type="string" />
        </RegistryKey>
        
        <RegistryKey Root="HKCU" Key="Software\Classes\AudioRecorder.Document">
          <RegistryValue Value="AudioRecorder 录音文件" Type="string" />
        </RegistryKey>
        
        <RegistryKey Root="HKCU" Key="Software\Classes\AudioRecorder.Document\DefaultIcon">
          <RegistryValue Value="[#MainExecutable],0" Type="string" />
        </RegistryKey>
        
        <RegistryKey Root="HKCU" Key="Software\Classes\AudioRecorder.Document\shell\open\command">
          <RegistryValue Value='"[#MainExecutable]" "%1"' Type="string" />
        </RegistryKey>
        
        <!-- 应用程序注册 -->
        <RegistryKey Root="HKCU" Key="Software\AudioRecorder\Capabilities">
          <RegistryValue Name="ApplicationName" Value="AudioRecorder" Type="string" />
          <RegistryValue Name="ApplicationDescription" Value="桌面录音控制器 - 支持URL协议控制" Type="string" />
        </RegistryKey>
        
        <RegistryKey Root="HKCU" Key="Software\AudioRecorder\Capabilities\URLAssociations">
          <RegistryValue Name="audiorecorder" Value="audiorecorder" Type="string" />
        </RegistryKey>
        
        <RegistryKey Root="HKCU" Key="Software\AudioRecorder\Capabilities\FileAssociations">
          <RegistryValue Name=".audiorecord" Value="AudioRecorder.Document" Type="string" />
        </RegistryKey>
      </Component>
    </ComponentGroup>
    
    <!-- 图标定义 -->
    <Icon Id="AppIcon" SourceFile="icon.ico" />
    
  </Package>
</Wix>